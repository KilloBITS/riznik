<html>
    <head>
        <title>
            Авторизація
        </title>
        <style>
            body{
                margin: 0;
                width: 100%;
                height: 100%;
                position: relative;
                background: #efefef url(../../../image/texture.png);
            }
            
            .auth{
                width: 460px;
                background: rgba(0, 0, 0, 0.55);
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%,-50%);
                border: 1px solid #000000;
                border-radius: 0px;
                box-shadow: -2px 2px 8px 1px black;
            }
            
            .auth input[type=text],.auth input[type=password]{
                width: 98%;
                height: 35px;
                margin: 20px 6px 0px 4px;
                background: transparent;
                border: 0;
                border-bottom: 2px solid white;
                color: white;
                text-align: center;
                font-size: 22px;
                font-family: sans-serif;
            }
            
            .auth input[type=submit]{
                width: 98%;
                height: 35px;
                /* margin-top: 20px; */
                margin: 20px 6px 0px 4px;
                border: 3px solid white;
                background: white;
                font-size: 18px;
                font-family: sans-serif;
                color: black;
                cursor: pointer;
                transition: 0.4s;
            }
            
            .auth input[type=submit]:hover{
                background: black;
                color: white
            }
        </style>
    </head>
    <body>
        <div class="auth block">
            <form action="/panel" method="GET">
                <input type="text" name="login" placeholder="Логін">
                <input type="text" name="pass" placeholder="Пароль">
                <input type="submit" value="Вхід" id="authBtn" name="authBtn">
            </form>
        </div>
    </body>
</html>